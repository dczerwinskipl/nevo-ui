{
  "name": "@nevo/ecommerce-admin",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "turbo": "^2.1.1",
    "typescript": "^5.6.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:design-system": "pnpm --filter @nevo/design-system build",
    "build:admin": "pnpm --filter @nevo/ecommerce-admin-app build",
    "dev": "turbo run dev --parallel",
    "dev:admin": "pnpm --filter @nevo/ecommerce-admin-app dev",
    "dev:fresh": "pnpm clean-cache && pnpm dev",
    "clean-cache": "pnpm --filter @nevo/ecommerce-admin-app clean-cache",
    "lint": "turbo run lint",
    "storybook": "pnpm --filter @nevo/design-system storybook",
    "storybook:build": "pnpm --filter @nevo/design-system build-storybook",
    "test": "turbo run test",
    "test:design-system": "pnpm --filter @nevo/design-system test",
    "test:design-system:ui": "pnpm --filter @nevo/design-system test:ui"
  },
  "msw": {
    "workerDirectory": [
      "apps\\admin\\public"
    ]
  }
}
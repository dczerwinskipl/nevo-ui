{
  "name": "@nevo/ecommerce-admin-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "predev": "pnpm msw:init",
    "dev": "vite",
    "dev:fresh": "pnpm clean-cache && pnpm dev",
    "clean-cache": "node -e \"const fs = require('fs'); ['node_modules/.vite', '.vite-dev'].forEach(d => { try { fs.rmSync(d, {recursive: true, force: true}); } catch(e) {} })\"",
    "build": "pnpm msw:init && tsc -b && vite build",
    "preview": "vite preview",
    "lint": "echo 'lint placeholder'",
    "msw:init": "msw init public --save",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "@nevo/api-client": "workspace:*",
    "@nevo/api-mocks": "workspace:*",
    "@nevo/design-system": "workspace:*",
    "@tanstack/react-query": "^5.0.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "lucide-react": "^0.469.0",
    "msw": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^5.4.10"
  },
  "msw": {
    "workerDirectory": "public"
  }
}